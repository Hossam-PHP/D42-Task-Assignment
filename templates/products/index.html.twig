{# templates/product/list.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    <h1>Products List</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Weight</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.title }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.weight }}</td>
                    <td>{{ product.category }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}